<%- include('../partials/header.ejs') %>

    <main class="event-details-main">
        <div class="container">
            <section class="event-details-section">
                <div class="event-image-container">
                    <img src="/img/<%= event.image || 'coder_group_with_desktops.jpg' %>" alt="<%= event.title %>" class="event-image">
                </div>
                <h2><%= event.title %></h2>
                <div class="event-details">
                    <p><strong>Hosted by:</strong> <%= event.hostname %></p>
                    <p><strong>Location:</strong> <%= event.location %></p>
                    <% if (event.topic) { %>
                        <p><strong>Topic:</strong> <%= event.topic %></p>
                    <% } %>
                    <% if (event.speaker) { %>
                        <p><strong>Speaker(s):</strong> <%= event.speaker %></p>
                    <% } %>
                    <p><strong>Start:</strong> <%= DateTime.fromISO(event.start).toLocaleString(DateTime.DATETIME_FULL) %></p>
                    <p><strong>End:</strong> <%= DateTime.fromISO(event.end).toLocaleString(DateTime.DATETIME_FULL) %></p>
                    <p><strong>Details:</strong> <%= event.details %></p>                    
                </div>
            </section>
        </div>
        <div class="event-actions">
            <form>
                <button type="submit" aria-label="Add to calendar">
                    <i class="fa-solid fa-calendar-check"></i>
                </button>
            </form>
            <form action="/events/<%= event.id %>/edit" method="GET">
                <button type="submit" aria-label="Edit Event">
                    <i class="fa-regular fa-pen-to-square"></i>
                </button>
            </form>
            <form action="/events/<%= event.id %>?_method=DELETE" method="POST">
                <button type="submit" aria-label="Delete Event">
                    <i class="fa-solid fa-trash-can"></i>
                </button>
            </form>
        </div>
    </main>

<%- include('../partials/footer.ejs') %>