<%- include('../partials/header.ejs')%>

<main class="signup-form">
    <h2>Sign Up New User</h2>
    <form action = '/users' method = 'POST'>
        <div class="name-fields">
            <div class="name-field">
                <label for="firstName">First Name <i class="fa-solid fa-circle-exclamation"></i></label>
                <input type="text" id="firstName" name="firstName" placeholder="Charles" required>
            </div>
            <div class="name-field">
                <label for="lastName">Last Name <i class="fa-solid fa-circle-exclamation"></i></label>
                <input type="text" id="lastName" name="lastName" placeholder="Babbage" required>
            </div>
        </div>

        <label for="email">Email Address <i class="fa-solid fa-circle-exclamation"></i></label>
        <input type="email" id="email" name="email" placeholder="Father@computing.edu" required>

        <label for="password">Password <i class="fa-solid fa-circle-exclamation"></i></label>
        <input type="password" id="password" name="password" placeholder="Your password" minlength="8" maxLength="64" required>

        <label for="confirmPassword">Confirm Password <i class="fa-solid fa-circle-exclamation"></i></label>
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Re-enter password" minlength="8" maxLength="64" required>

        <button type="submit">Sign Up</button> 
    </form>
</main>

<%- include('../partials/footer.ejs')%>