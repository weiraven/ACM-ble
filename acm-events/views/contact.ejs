<%- include('./partials/header.ejs') %>

<main class="contact-form">
    <div class="container">
        <h2>Contact Us</h2>
        <form action="/contact" method="POST">
            <label for="email">Email <i class="fa-solid fa-circle-exclamation"></i></label>
            <input type="email" id="email" name="email" required>

            <label for="subject">Subject <i class="fa-solid fa-circle-exclamation"></i></label>
            <input type="text" id="subject" name="subject" required>

            <label for="message">Query <i class="fa-solid fa-circle-exclamation"></i></label>
            <textarea id="message" name="message" rows="6" required></textarea>

            <button type="submit">Submit</button>
        </form>
    </div>
</main>

